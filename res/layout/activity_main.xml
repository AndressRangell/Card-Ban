    <android.support.v7.widget.CardView
        android:id="@+id/cardviewRecycler"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarBancard"
        android:layout_alignParentEnd="true"
        android:elevation="1dp"
        android:visibility="gone"
        app:cardBackgroundColor="#174B94"
        app:cardCornerRadius="2dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewMoreApps"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linerLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarBancard"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <include
            layout="@layout/subheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvNombreComercio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Inicialice"
            android:textColor="@color/colorAzul174B"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@color/colorbuttonnumber" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_logo_infonet_cobranzas" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:text="Ingresar Código:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tvTitulo"
            android:layout_marginStart="32dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/border_number"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:hint="Código"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:paddingHorizontal="16dp"
            android:paddingVertical="5dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/colorbuttonnumber" />

        <include layout="@layout/view_teclado" />
    </LinearLayout>
</RelativeLayout>