<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar_id"
        layout="@layout/toolbar_cancel" />

    <LinearLayout
        android:id="@+id/plantilla_prompts"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbar_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/setting_dialog_bg"
            android:backgroundTint="@color/white">

            <TextView
                android:id="@+id/tv_nombre_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="----------------"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="41dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="none"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/setting_dialog_bg_bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancelar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/setting_dialog_cancel_bg"
                android:textColor="@color/white"
                android:backgroundTint="@android:color/holo_red_light"
                android:clickable="true"
                android:gravity="center"

                android:text="@string/cancel"/>

            <Button
                android:id="@+id/btn_aceptar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_shape"
                android:clickable="true"
                android:gravity="center"

                android:text="@string/confirm"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
